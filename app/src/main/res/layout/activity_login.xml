<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".awal.LoginActivity">


    <ImageView
        android:id="@+id/back_log"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/kem"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"/>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/kem2"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:fontFamily="@font/poppinssemibold"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="4dp"
        android:src="#8AC7B7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/landing"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"/>

    <EditText
            android:id="@+id/edtUsername_log"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="400dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinsregular"
            android:hint="Serenepath@gmail.com"
            android:paddingStart="20dp"
            android:background="@drawable/background_edt"/>

    <EditText
            android:id="@+id/edtPassword_log"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/edtUsername_log"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinsregular"
            android:hint="**********"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:background="@drawable/background_edt"/>

    <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="18dp"
            android:layout_below="@id/edtPassword_log"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"/>

    <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="By continuing, you agree to our"
            android:layout_below="@id/forgot"
            android:textSize="12dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"/>

    <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Terms of Service"
            android:textColor="#5A8076"
            android:layout_below="@id/forgot"
            android:textSize="12dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="230dp"/>

    <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="end"
            android:layout_below="@id/forgot"
            android:textSize="12dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="335dp"/>

    <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Privacy Policy."
            android:textColor="#5A8076"
            android:layout_below="@id/text1"
            android:textSize="12dp"
            android:layout_marginStart="40dp"/>

    <Button
            android:id="@+id/btn_login"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_below="@id/text4"
            android:text="Log in"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't Have an Account?"
        android:textSize="15dp"
        android:fontFamily="@font/poppinsregular"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"/>

    <TextView
        android:id="@+id/txt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="15dp"
        android:fontFamily="@font/poppinsbold"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="14dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:textColor="#8AC7B7"/>

</RelativeLayout>