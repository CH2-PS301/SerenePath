<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.AccountActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="25dp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/foto_user"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/landing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Dark Mode"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginTop="580dp"
            android:layout_centerHorizontal="true"/>

    <Switch
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="630dp"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="680dp"
        android:minHeight="48dp"
        android:textSize="20dp"
        android:text="Logout" />

    <ImageView
        android:id="@+id/home_account"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/home_icon2"
        android:layout_marginTop="775dp"
        android:layout_marginStart="100dp"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/account_account"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/akun_icon1"
        android:layout_marginTop="775dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"/>

</RelativeLayout>