<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.home_conditions.DailyCondition">

    <ImageView
        android:id="@+id/back_daily"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/kem"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"/>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/kem2"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Conditions Serene           !"
        android:textSize="22dp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Path"
        android:textSize="22dp"
        android:textColor="#70A597"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="120dp"
        android:layout_marginStart="310dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How's your day?"
        android:textSize="22dp"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginTop="200dp"
        android:layout_marginStart="40dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="#8AC7B7">

        <EditText
            android:id="@+id/editTextInput"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edt2"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center"
            android:inputType="textMultiLine|textCapSentences"
            android:textColor="@color/white"
            android:textSize="30dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_check"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/card1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Check"
        android:textSize="18dp"
        android:fontFamily="@font/poppinsbold"/>

    <ImageView
        android:id="@+id/imageViewPopup"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@drawable/sukses"
        android:layout_below="@id/btn_check"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewPopup"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Kamu tidak sedang gejala depresi
Semoga harimu menyenangkan"
        android:textSize="20sp"
        android:fontFamily="@font/poppinssemibold"
        android:textAlignment="center"
        android:layout_marginTop="-20dp"
        android:layout_below="@id/imageViewPopup"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageViewPopup2"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@drawable/gagal"
        android:layout_below="@id/btn_check"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewPopup2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="kamu terindikasi gejala depresi
silahkan membuka fitur yang kami sediakan"
        android:textSize="20sp"
        android:fontFamily="@font/poppinssemibold"
        android:textAlignment="center"
        android:layout_marginTop="-20dp"
        android:layout_below="@id/imageViewPopup2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/img_daily"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/daily1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_check"/>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/home_icon1"
        android:layout_marginTop="775dp"
        android:layout_marginStart="100dp"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/akun_daily"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/akun_icon2"
        android:layout_marginTop="775dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"/>

</RelativeLayout>