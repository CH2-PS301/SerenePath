<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".awal.RegisterActivity">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/landing"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"/>

    <ImageView
        android:id="@+id/back_reg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/kem"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/kem2"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:fontFamily="@font/poppinssemibold"/>

    <ImageView
            android:layout_width="350dp"
            android:layout_height="4dp"
            android:src="#8AC7B7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="20dp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="380dp"/>

    <EditText
            android:id="@+id/edtUsername_reg"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="420dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/background_edt"
            android:hint="Serenepath"
            android:paddingStart="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="20dp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="480dp"/>

    <EditText
            android:id="@+id/edtEmail_reg"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="520dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/background_edt"
            android:hint="serenepath@gmail.com"
            android:paddingStart="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20dp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="580dp"/>

    <EditText
            android:id="@+id/edtPassword_reg"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="620dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/background_edt"
            android:hint="*************"
            android:inputType="textPassword"
            android:paddingStart="20dp"/>

    <Button
            android:id="@+id/btn_register"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:text="Sign up"
            android:textSize="20dp"
            android:layout_marginTop="695dp"
            android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Have an Account?"
        android:textSize="15dp"
        android:fontFamily="@font/poppinsregular"
        android:layout_below="@id/btn_register"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"/>

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="15dp"
        android:fontFamily="@font/poppinsbold"
        android:layout_below="@id/btn_register"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="85dp"
        android:textColor="#8AC7B7"/>

</RelativeLayout>