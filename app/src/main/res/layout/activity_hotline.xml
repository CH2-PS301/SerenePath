<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.home_hotline.HotlineActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/kem"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"/>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/kem2"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotline"
            android:textSize="25dp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_psikolog"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="20dp">

        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_star_24"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Psikolog / Psikiater"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginTop="25dp"
                android:layout_marginStart="75dp"
                android:textSize="15dp"/>

        <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="315dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/next" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_pencegahan"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="20dp">

        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_call_24"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                app:tint="@color/tint_dark" />

        <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Hotline Pencegahan Upaya Bunuh Diri"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginTop="13dp"
                android:layout_marginStart="75dp"
                android:textSize="15dp"/>

        <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="315dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/next" />
    </androidx.cardview.widget.CardView>

    <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/merenung"
            android:layout_below="@id/card_pencegahan"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/home_icon1"
            android:layout_marginTop="775dp"
            android:layout_marginStart="100dp"
            android:layout_alignParentStart="true"/>

    <ImageView
            android:id="@+id/akun_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/akun_icon2"
            android:layout_marginTop="775dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"/>

</RelativeLayout>